{
  "name": "payload-firestore-adapter",
  "version": "0.2.0-alpha.1",
  "description": "An unofficial firestore database adapter for Payload",
  "homepage": "https://github.com/dracoblue/payload-firestore-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/dracoblue/payload-firestore-adapter.git",
    "directory": "."
  },
  "license": "MIT",
  "author": "DracoBlue <JanS@DracoBlue.de> (https://dracoblue.net)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./types": {
      "import": "./src/types.ts",
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/types.js",
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "build": "rimraf .dist && rimraf tsconfig.tsbuildinfo  && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:all": "pnpm build && pnpm -C dev build",
    "build:app": "pnpm -C dev build",
    "clean": "rimraf {dist,*.tsbuildinfo,package}",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "dev": "pnpm -C dev dev",
    "test": "NODE_OPTIONS=\"--no-deprecation\" NODE_NO_WARNINGS=1 PAYLOAD_DATABASE=firestore FIRESTORE_EMULATOR_HOST=0.0.0.0:8080 FIRESTORE_PROJECT_ID=example DISABLE_LOGGING=true jest --forceExit --detectOpenHandles --config=jest.config.js --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepack": "pnpm prepublishOnly",
    "prepublishOnly": "pnpm clean && pnpm build && pnpm copyfiles"
  },
  "dependencies": {
    "console-table-printer": "2.11.2",
    "firebase": "11.0.2",
    "firebase-admin": "13.0.0",
    "prompts": "2.4.2",
    "to-snake-case": "1.0.0",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@hyrious/esbuild-plugin-commonjs": "^0.2.4",
    "@swc-node/register": "1.10.9",
    "@swc/cli": "0.4.0",
    "@swc/jest": "0.2.36",
    "@types/jest": "^29.5.14",
    "@types/to-snake-case": "1.0.0",
    "copyfiles": "^2.4.1",
    "esbuild": "0.23.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "jest": "^29.7.0",
    "jest-ctrf-json-reporter": "^0.0.9",
    "rimraf": "6.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "4.19.1",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@payloadcms/eslint-config": "^3.0.0",
    "eslint": "9.9.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "payload": "^3.0.0"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./types": {
        "import": "./dist/types.js",
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  }
}
