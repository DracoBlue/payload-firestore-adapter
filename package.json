{
  "name": "payload-firestore-adapter",
  "version": "0.1.0",
  "description": "An unofficial firestore database adapter for Payload",
  "homepage": "https://github.com/dracoblue/payload-firestore-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/dracoblue/payload-firestore-adapter.git",
    "directory": "."
  },
  "license": "MIT",
  "author": "DracoBlue <JanS@DracoBlue.de> (https://dracoblue.net)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./types": {
      "import": "./src/types.ts",
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/types.js",
  "files": [
    "dist",
    "mock.js"
  ],
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "build": "rimraf .dist && rimraf tsconfig.tsbuildinfo  && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf {dist,*.tsbuildinfo}",
    "lint": "eslint .",
    "dev": "PAYLOAD_DATABASE=firestore FIRESTORE_EMULATOR_HOST=0.0.0.0:8080 FIRESTORE_PROJECT_ID=example-firestore-dev pnpm -C dev dev",
    "lint:fix": "eslint . --fix",
    "prepack": "pnpm clean && pnpm turbo build",
    "prepublishOnly": "pnpm clean && pnpm turbo build --filter=./"
  },
  "dependencies": {
    "console-table-printer": "2.11.2",
    "firebase": "11.0.1",
    "firebase-admin": "12.6.0",
    "prompts": "2.4.2",
    "to-snake-case": "1.0.0",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@hyrious/esbuild-plugin-commonjs": "^0.2.4",
    "@types/to-snake-case": "1.0.0",
    "esbuild": "0.23.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "rimraf": "6.0.1",
    "typescript": "^5.6.3",
    "tsx": "4.19.1",
    "@swc-node/register": "1.10.9",
    "turbo": "^2.1.3",
    "@swc/cli": "0.4.0",
    "@swc/jest": "0.2.36"
  },
  "peerDependencies": {
    "payload": "3.0.0-beta.123",
    "@payloadcms/eslint-config": "3.0.0-beta.112",
    "eslint": "9.9.1",
    "eslint-plugin-jsx-a11y": "6.10.2"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./types": {
        "import": "./dist/types.js",
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  }
}
